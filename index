<body>
    <h2>TEXT TO SPEECH CONVERTER</h2>
  <div class="container">
    <textarea id="inputText" cols="50" rows="4" placeholder="Enter text to speak"></textarea>
    <button onclick="speak()">Speak</button>
  </div>
  <script>
    function speak() {
      var text = document.getElementById("inputText").value;
      var speech = new SpeechSynthesisUtterance();
      speech.text = text;
      speech.volume = 1;
      speech.rate = 1;
      speech.pitch = 1;
      window.speechSynthesis.speak(speech); 
    }
  </script>
